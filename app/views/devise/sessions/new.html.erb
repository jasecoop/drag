<div class="container-full">

<p><strong>Sign up to Volume</strong></p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field input-hench">
    <%= f.text_field :login, :placeholder => 'Username', autofocus: true %>
  </div>

  <div class="field input-hench">
    <%= f.password_field :password, :placeholder => 'Password', autocomplete: "off" %>
  </div>

<!--   <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
 -->
  <div class="actions button-hench">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
