<div class="container-full">

<p><strong>Sign up to Volume</strong></p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field input-hench">
    <%= f.text_field :username, :placeholder => 'Username', autofocus: true %>
  </div>

  <div class="field input-hench">
    <%= f.email_field :email, autofocus: true, :placeholder => 'Email' %>
  </div>

  <div class="field input-hench">
    <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password' %>
  </div>

  <div class="field input-hench">
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Confirm password' %>
  </div>

  <div class="actions button-hench">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

</div>

<%= render "devise/shared/links" %>
