<div class="page-container registration">

  <div class="page__header">
    <div><strong>Drag</strong></div>
    <div>Sign up</div>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field input-line input-full">
    <%= f.text_field :username, :placeholder => 'Username', autofocus: true %>
  </div>

  <div class="field input-line input-full">
    <%= f.email_field :email, autofocus: true, :placeholder => 'Email' %>
  </div>

  <div class="field input-line input-full">
    <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password' %>
  </div>

  <div class="field input-line input-full">
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Confirm password' %>
  </div>

  <div class="actions button-hench">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

</div>

