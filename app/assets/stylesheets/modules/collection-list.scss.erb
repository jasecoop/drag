.collection-list {
  display: inline-block;
  font-weight: bold;
  line-height: 1.2em;
  height: 100%;
  background: image-url('<%= asset_path("bg_text_collections.svg") %>') rgba(255,255,255,.9);
  background-repeat: no-repeat;
  background-position: bottom 100px center;
  background-size: 105%;
  padding-top: 4rem;
  z-index: 2;
}

.collection-list ul {
  margin-top: 100px;
}

.collection-list ul {
  list-style-type: none;
  float: left;
  width: 100%;
  margin: 0;
  padding: 0;
}

.collection {
  @extend .mb2;
}

.collection a {
  color: #4F5056;
  &:hover {
    color: #191A1C;
  }
}

.collection__info {
  @extend .small;
}

.collection__name {
  @extend .h2;
  font-weight: normal;
  line-height: 1.5em;
  &:after {
    content: "";
    display: inline-block;
    width: 39px;
    height: 19px;
    background: url('<%= asset_path("../assets/hand.svg") %>');
    background-repeat: no-repeat;
    margin-left: .5rem;
  }
  &:hover {
    text-decoration: none;
    &:after {
      background-position: -39px 0;
    }
  }
}

.collections-yours,
.collections-theirs {
  width: 50%;
  float: left;
}

.collections-yours h1,
.collections-theirs h1,
.collections-theirs p {
  float: left;
  margin-top: 0;
}

.collections-add {
  background: #33F1FF;
  padding: .3rem .5rem;
  margin-left: 1rem;
  margin-top: 9px;
  display: block;
  float: left;
  cursor: pointer;
  &:hover {
    background: darken(#33F1FF, 15);
  }
}
