header {
  display: block;
  width: 100%;
  position: fixed;
  z-index: 3;
  @extend .small;
  top: 0;
  height: 2rem;
  line-height: 2rem;
  padding: 0;
  // background: rgba(00,00,00,.03);
  color: rgba(00,00,00,.3);
  font-family: 'GTCinetype-Mono';
  -webkit-transition: all 200ms ease-in-out;
  -moz-transition: all 200ms ease-in-out;
  -ms-transition: all 200ms ease-in-out;
  -o-transition: all 200ms ease-in-out;
  transition: all 200ms ease-in-out;
  &:hover {
    // background: rgba(00,00,00,.07);
    color: rgba(00,00,00,.8);
  }
}

.header__container {
  padding: 0 $page-x;
}

header a {
  color: rgba(00,00,00,.6);
  &:hover {
    text-decoration: none;
    color: rgba(00,00,00,.9);
    border-color: rgba(00,00,00,.9);
  }
}

.header__settings {
  cursor: pointer;
}

.header__settings .icon {
  display: inline-block;
  width: 15px;
  height: 31px;
  float: left;
  background-size: 100%;
  background-position: left center;
  background: url('<%= asset_path("icon_settings2.svg") %>');
  background-repeat: no-repeat;
  cursor: pointer;
  margin-left: 1rem;
  margin-top: 2rem;
}

.header__settings:hover .icon {
  background-position: -15px 0;
}
.header__settings .text {
  opacity: 0;
  margin-left: .5rem;
  margin-top: 2rem;
}

.header__settings:hover .text {
  display: inline-block;
  opacity: 1;
  cursor: pointer;
  margin-top: 2rem;
}


.header-user__tag{
  color: rgba(00,00,00,.9);
}

.header-user {
  float: left;
  @extend .h2;
  text-transform: capitalize;
  margin-top: 2rem;
  font-family: 'GTCinetype';
}

.header-menu {
  position: relative;
  z-index: 5;
  float: right;
  width: 100%;
  background: rgba(00,00,00,.02);
}

.header-menu ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  text-align: right;
  margin-right: 2rem;
}

.header-menu li {
  display: inline-block;
  margin-left: 20px;
}

.header-user__tag:before {
  content: "/";
  padding: 0 10px;
  color: rgba(00,00,00,.3);
}
